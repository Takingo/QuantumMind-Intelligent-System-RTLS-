# =====================================================
# QUANTUMMIND RTLS - ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!
# =====================================================

# ========== SUPABASE CONFIGURATION ==========
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_key_here

# ========== MQTT CONFIGURATION ==========
# Configure your MQTT broker for real-time IoT communication
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=quantummind_rtls_client

# ========== ESP32 CONFIGURATION ==========
# ESP32 device IP addresses for direct HTTP communication
ESP32_BASE_URL=http://192.168.1.100
ESP32_DOOR_CONTROLLER_IP=192.168.1.101
ESP32_SENSOR_NODE_IP=192.168.1.102

# ========== APPLICATION SETTINGS ==========
APP_ENV=development
DEBUG_MODE=true
ENABLE_ANALYTICS=false

# ========== SECURITY SETTINGS ==========
ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=your_32_character_encryption_key_here_12345

# ========== MAP CONFIGURATION ==========
# Default map dimensions in meters
DEFAULT_MAP_WIDTH=100.0
DEFAULT_MAP_HEIGHT=80.0
MAP_SCALE=0.025

# ========== RTLS SETTINGS ==========
# Real-Time Location System parameters
RTLS_UPDATE_INTERVAL_MS=500
TAG_POSITION_HISTORY_SIZE=50
ANCHOR_COUNT=4

# ========== GEOFENCING ==========
GEOFENCE_CHECK_INTERVAL_MS=1000
ENABLE_GEOFENCE_ALERTS=true

# ========== NOTIFICATION SETTINGS ==========
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_SOUND=default

# =====================================================
# NOTES:
# - Replace all placeholder values with your actual configuration
# - Keep .env file secure and never commit to Git
# - See SUPABASE_SETUP_GUIDE.md for detailed setup instructions
# =====================================================
